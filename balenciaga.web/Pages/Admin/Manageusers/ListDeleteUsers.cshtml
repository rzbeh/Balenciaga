@page
@using balenciaga.Core.Convertors
@model balenciaga.web.Pages.Admin.Manageusers.ListDeleteUsersModel
@{
    ViewData["Title"] = "ListDeleteUsers";
}


<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Users List</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                website user
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline" role="grid">
                        <div class="row">
                            <form>
                                <div class="col-sm-5 col-md-5">
                                    <input type="text" name="filterUserName" class="form-control" placeholder=" User Name" />
                                </div>
                                <div class="col-sm-5 col-md-5">
                                    <input type="text" name="filterEmail" class="form-control" placeholder="Email" />
                                </div>
                                <div class="col-sm-2 col-md-2">
                                    <button type="submit" class="btn btn-info">Search</button>
                                    <a class="btn btn-default btn-sm" href="/Admin/Users">empty</a>
                                </div>
                            </form>
                        </div>
                        <div class="col-md-12" style="margin: 10px 0;">
                            <a asp-page="CreateUser" class="btn btn-outline btn-success">Create User</a>
                        </div>
                        <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" aria-describedby="dataTables-example_info">
                            <thead>
                                <tr>
                                    <th>User Name</th>
                                    <th>Email</th>
                                    <th>Avtive</th>
                                    <th>Register Date</th>
                                    <th>more</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var user in Model.UserForAdminViewModel.Users)
                                {
                                    <tr>
                                        <td>@user.UserName</td>
                                        <td>@user.Email</td>
                                        <td>
                                            @if (user.IsActive)
                                            {
                                                <p class="text-success">Avtive</p>
                                            }
                                            else
                                            {
                                                <p class="text-danger">Not Active</p>
                                            }
                                        </td>
                                        <td>@user.RegisterDate</td>
                                        <td>
                                            <a href="/Admin/Manageusers/EditUser/@user.UserId" class="btn btn-warning btn-sm">Edit</a>
                                            <a href="#" class="btn btn-danger btn-sm">Delete</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="dataTables_paginate paging_simple_numbers" id="dataTables-example_paginate">
                                    <ul class="pagination">
                                        @for (int i = 1; i <= Model.UserForAdminViewModel.PageCount; i++)
                                        {
                                            <li class="paginate_button @((i==Model.UserForAdminViewModel.CurrentPage)?"active":"")" aria-controls="dataTables-example" tabindex="0">
                                                <a href="/Admin/Manageusers?PageId=@i">@i</a>
                                            </li>
                                        }
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
</div>
